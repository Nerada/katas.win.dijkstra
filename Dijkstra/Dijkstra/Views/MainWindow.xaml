<Window x:Class="Dijkstra.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dijkstra.Views"
        xmlns:viewModels="clr-namespace:Dijkstra.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModels:GridViewModel}"
        Title="MainWindow" Height="800" Width="1020" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.Resources>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <local:MapView Grid.Row="2" DataContext="{Binding Mode=OneWay}"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top" MinWidth="210" MinHeight="100" />

        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Button Height="50" Width="100" Command="{Binding CalculateRouteCommand}"
                    Content="Calculate route" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Window>